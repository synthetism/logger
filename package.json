{
  "name": "@synet/logger",
  "version": "0.1.3",
  "description": "Logging abstraction for Synet packages",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/synthetism/synet/packages/synet-logger.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "vitest run",
    "lint": "biome lint ./src",
    "dev:test": "vitest --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "npm run lint && npm run build && npm test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.6.3",
    "@vitest/coverage-v8": "^3.1.3",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Synet Team",
  "homepage": "https://synthetism.ai/synet",
  "license": "MIT"
}
